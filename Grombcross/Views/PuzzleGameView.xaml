<UserControl
    x:Class="Grombcross.Views.PuzzleGameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Grombcross.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Grombcross.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--<UserControl.DataContext>
        <viewmodels:PuzzleGameViewModel/>
    </UserControl.DataContext>-->

    <UserControl.Resources>
        <DataTemplate x:Key="GridColumnsTemplate">
            <Button
                Width="50"
                Height="50"
                Margin="5"
                Click="LeftClickBlock"
                Style="{Binding State, Converter={StaticResource BlockToButtonStyleConverter}}">
                <!--<Button.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="LeftClickBlock" />
                    <MouseBinding Gesture="RightClick" Command="RightClickBlock" />
                </Button.InputBindings>-->
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="GridRowsTemplate">
            <ItemsControl ItemTemplate="{DynamicResource GridColumnsTemplate}" ItemsSource="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        <DataTemplate x:Key="LeftHintLinesTemplate">
            <Border Height="50" Margin="5">
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="35"
                    Foreground="White"
                    Text="{Binding LineString}" />
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TopHintLinesTemplate">
            <Border Width="50" Margin="5">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="32"
                    Foreground="White"
                    LineHeight="40"
                    LineStackingStrategy="BlockLineHeight"
                    Text="{Binding LineString}" />
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RenderTransformOrigin>
            <Point X="0.5" Y="0.5" />
        </Grid.RenderTransformOrigin>
        <Grid.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1" />
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--<Border
            Grid.Row="0"
            Grid.Column="0"
            Background="Blue" />
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Background="Red" />
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Background="Green" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Background="Yellow" />-->

        <ItemsControl
            x:Name="LeftHintLines"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,5,0"
            ItemTemplate="{DynamicResource LeftHintLinesTemplate}"
            ItemsSource="{Binding LeftHintLines}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ItemsControl
            x:Name="TopHintLines"
            Grid.Row="0"
            Grid.Column="4"
            ItemTemplate="{DynamicResource TopHintLinesTemplate}"
            ItemsSource="{Binding TopHintLines}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <ItemsControl
            x:Name="PicrossGrid"
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource GridRowsTemplate}"
            ItemsSource="{Binding Blocks}" />
    </Grid>
</UserControl>

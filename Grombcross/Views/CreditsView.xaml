<UserControl
    x:Class="Grombcross.Views.CreditsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Grombcross.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>


        <!--  Title  -->
        <Border Grid.Row="0" Background="White" />
        <TextBlock
            Grid.Row="0"
            Margin="0,5,0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            Text="Credits" />


        <!--  Puzzle Select  -->
        <Border />


        <!--  Buttons  -->
        <StackPanel
            Grid.Row="2"
            Height="65"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <!--Visibility="{Binding PuzzleSolved, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Button
                Margin="10"
                Click="ShowTitle"
                Style="{StaticResource BouncyButtonBehavior}">
                <TextBlock
                    Margin="10,5"
                    FontSize="24"
                    Text="Title Screen" />
            </Button>-->
            <Button
                Margin="10"
                Click="ShowPuzzleSelect"
                Style="{StaticResource BouncyButtonBehavior}">
                <TextBlock
                    Margin="10,5"
                    FontSize="24"
                    Text="Puzzle Select" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

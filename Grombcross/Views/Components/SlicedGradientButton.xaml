<UserControl
    x:Class="Grombcross.Views.Components.SlicedGradientButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Grombcross.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Column="0"
            RenderOptions.BitmapScalingMode="HighQuality"
            SnapsToDevicePixels="True"
            Source="..\..\Graphics\GradientButtonLeft.png"
            Stretch="Fill" />
        <Image
            Grid.Column="1"
            RenderOptions.BitmapScalingMode="HighQuality"
            SnapsToDevicePixels="True"
            Source="..\..\Graphics\GradientButtonMiddle.png"
            Stretch="Fill" />
        <Image
            Grid.Column="2"
            RenderOptions.BitmapScalingMode="HighQuality"
            SnapsToDevicePixels="True"
            Source="..\..\Graphics\GradientButtonRight.png"
            Stretch="Fill" />
    </Grid>
</UserControl>

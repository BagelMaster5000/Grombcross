<UserControl
    x:Class="Grombcross.Views.Components.BlueGradientActionButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Grombcross.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Rectangle
        Margin="-2,-3"
        RadiusX="4"
        RadiusY="4"
        Stroke="#6dbbe8"
        StrokeThickness="2">
        <Rectangle.Fill>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="0, 1">
                <GradientStop Offset="0" Color="#6dbbe8" />
                <GradientStop Offset="0.1" Color="#6dbbe8" />
                <GradientStop Offset="1.3" Color="#363795 " />
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
